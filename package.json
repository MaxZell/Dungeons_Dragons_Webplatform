{
  "name": "dungeons-and-dragons-platform",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "run": "node",
    "dev": "nodemon",
    "start": "node --inspect=5858 -r ts-node/register ./index.ts",
    "build": "tsc"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "./"
    ],
    "exec": "yarn start",
    "ext": "ts"
  },
  "dependencies": {
    "@types/express": "^4.17.11",
    "@types/node": "^15.0.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "eslint": "^7.25.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "mongodb": "^3.6.6",
    "nodemon": "^2.0.7",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
